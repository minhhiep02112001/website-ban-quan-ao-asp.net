
@{
    Layout = null;
}
@model ShopQuanAo.Areas.admin.Data.UserLogin
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Login</title>

    <!-- Fontfaces CSS-->
    <link href="~/Public/admin/css/font-face.css" rel="stylesheet" media="all">
   
    <!-- Bootstrap CSS-->
    
    <!-- Main CSS-->
    <link href="~/Public/admin/css/theme.css" rel="stylesheet" media="all">

</head>

<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <img src="~/Public/admin/images/icon/logo.png" alt="CoolAdmin">
                            </a>
                        </div>
                        <div class="login-form">

                            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "text-danger w-100" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label>Email Address</label>
                                    @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control au-input au-input--full" } })
                                   @* <span style="color:red;">
                                        @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "help-block form-text text-danger" })
                                    </span>*@
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @type = "password", @class = "form-control au-input au-input--full" } })
                                   @* <span style="color:red;">
                                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "help-block form-text text-danger" })
                                    </span>*@
                                </div>
                                <div class="login-checkbox">
                                    <label>

                                        <input type="checkbox" name="remember">Remember Me
                                    </label>

                                </div>
                                <span style="color:red;">
                                    @Html.ValidationSummary(false, "", new { @class = "help-block form-text text-danger" })
                                </span>
                                

                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>





                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Jquery JS-->
    
    <!-- Main JS-->
    <script src="js/main.js"></script>

</body>

</html>
<!-- end document-->
